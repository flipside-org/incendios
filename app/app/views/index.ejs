<%-partial('structure/html_start') %>
<%-partial('structure/header') %>

  <section id="map-container" class="three-fifths"><div id="map"><!-- The map --></div></section>
  
  <aside id="sidebar" class="two-fifths">    
    <div class="wrapper">
      
      <header>
        <h1><%= title %></h1>
        
        <!-- location breadcrumbs -->
        <% if (typeof breadcrumbs != "undefined" && breadcrumbs.length) { %>
          <%-partial('breadcrumbs') %>
        <% } %>
        <!-- / location breadcrumbs -->
        
        <!-- charts and stats -->
        <% if (typeof statsadminarea != "undefined") { %>
          <% if (statsadminarea != null) { %>
            <p id="stats_verbose"><!-- Stats verbose --></p>
          <% } else { %>
            <p>Encontrou o local mais seguro de Portugal. Nunca aconteceu nada aqui.</p>
          <% } %>
        <% } %>
        <!-- / charts and stats -->
          
      </header>
      <section>
        <!-- charts and stats -->
        <% if (typeof statsadminarea != "undefined" && statsadminarea != null) { %>
          <h2>Fire type per year</h2>
          <div id="fires-year"><!-- Chart --></div>
          <h2>Burnt area per year</h2>
          <div id="burnt-area"><!-- Chart --></div>
        <% } %>
        <!-- / charts and stats -->
      </section>
      
    </div>
  </aside>
  
  
<%-partial('structure/footer') %>
<%-partial('structure/html_end') %>