  <%
    if (typeof page_meta != "undefined" && page_meta.type == 'page') {
      var classes = 'four-fifths';
    }
    else if(typeof page_meta != "undefined" && page_meta.type == 'index') {
      var classes = 'three-fifths';
    }
    else {
      var classes = 'two-fifths';
    }
  %>
  <header id="header" class="<%= classes %> float-right">
    <div class="wrapper clearfix">
      
      <h1><a href="/">IncÃªndios</a> <small>2001 - 2011</small></h1>
      
      <nav class="language-switcher">
        <ul>
          <li><a class="<%= page_meta.lang == 'en' ? 'active' : '' %>" href="<%= page_meta.url.replace(/(\/)en|pt(\/?)/, '$1en$2') %>">EN</a></li>
          <li><a class="<%= page_meta.lang == 'pt' ? 'active' : '' %>" href="<%= page_meta.url.replace(/(\/)en|pt(\/?)/, '$1pt$2') %>">PT</a></li>
        </ul>
      </nav>
      
      <br class="clear-small" />
            
      <nav class="main-nav">
        <% var menu = 'main'; if (menu in menus) { %>
          <ul>
            <% menus[menu].forEach(function(menu_item){ %>
              <li><a href="/<%= menu_item.language %>/<%= menu_item.url %>"><%= menu_item.title %></a></li>
            <% }) %>
          </ul>
        <% } %>
      </nav>
    </div>
  </header>
