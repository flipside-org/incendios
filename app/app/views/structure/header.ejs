  <%
    var classes = 'float-right ';
    if (typeof page_meta != "undefined" && page_meta.type == 'page') {
      classes += 'four-fifths';
    }
    else if(typeof page_meta != "undefined" && (page_meta.type == 'index' || page_meta.type == 'story')) {
      classes += 'three-fifths';
    }
    else if(typeof page_meta != "undefined" && page_meta.type == 'error') {
      classes = '';
    }
    else {
      classes += 'two-fifths';
    }
  %>
  <header id="header" class="<%= classes %>">
    <div class="wrapper clearfix">

      <h1><a href="/<%= page_meta.lang %>">IncÃªndios</a> <small>2001 - 2011</small></h1>

      <% if (page_meta._translations) { %>
      <nav class="language-switcher">
        <ul>
          <%
            page_meta._translations.forEach(function(language) {
              var active = language.lang == page_meta.lang ? 'active' : ''
          %>
            <li><a class="<%= active %>" href="/<%= language.url %>"><%= language.lang.toUpperCase() %></a></li>
          <% }) %>
        </ul>
      </nav>
      <% } %>

      <br class="clear-small" />

      <% if (menus) { %>
      <nav class="main-nav">
        <% var menu = 'main'; if (menu in menus) { %>
          <ul>
            <% menus[menu].forEach(function(menu_item){ %>
              <li><a href="/<%= menu_item.language %>/<%= menu_item.url %>"><%= menu_item.title %></a></li>
            <% }) %>
          </ul>
        <% } %>
      </nav>
      <% } %>
    </div>
  </header>
